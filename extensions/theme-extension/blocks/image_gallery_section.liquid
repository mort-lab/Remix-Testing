<div class="container">
  <div class="gallery">
    <div class="img-box"><h3>Madison</h3></div>
    <div class="img-box"><h3>Martin</h3></div>
    <div class="img-box"><h3>Jose</h3></div>
    <div class="img-box"><h3>Cristiano</h3></div>
  </div>
</div>

<style>
  .container {
    width: 100%;
    height: 100%;
    background-color: #f2e9ff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gallery {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .img-box {
    width: 150px;
    height: 500px;
    margin: 10px;
    border-radius: 50px;
    background: url({{block.settings.image_with_text_image_1 | img_url}});
    background-size: cover;
    background-position: center;
    position: relative;
    transition: width 0.5s;
    margin-top: 16px;
    margin-bottom: 16px;
  }

  .img-box:nth-child(2) {
    background: url({{block.settings.image_with_text_image_1|img_url}});
    background-size: cover;
    background-position: center;
  }
  .img-box:nth-child(3) {
    background: url({{block.settings.image_with_text_image_1|img_url}});
    background-size: cover;
    background-position: center;
  }
  .img-box:nth-child(4) {
    background: url({{block.settings.image_with_text_image_1|img_url}});
    background-size: cover;
    background-position: center;
  }

  .img-box h3 {
    color: #fff;
    position: absolute;
    bottom: 0;
    left: 30px;
    opacity: 0;
    transition: bottom 0.5s, opacity 0.5s;
  }

  .img-box:hover {
    width: 500px;
    cursor: pointer;
  }

  .img-box:hover h3 {
    opacity: 1;
    bottom: 25px;
  }
</style>

{% schema %}
{
  "name": "Image Gallery Section",
  "target": "section",
  "available_if": "{{ app.metafields.martinAppMetafield.hasPlan }}",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_with_text_image_1",
      "label": "Image"
    }
  ]
}
{% endschema %}
