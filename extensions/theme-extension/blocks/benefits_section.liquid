<div class="container">
  <div class="benefit">
    <div class="emoji">{{ block.settings.block1_emoji }}</div>
    <div class="text-container">
      <p class="primary-text">{{ block.settings.block1_primary_text }}</p>
      <p class="secondary-text">{{ block.settings.block1_secondary_text }}</p>
    </div>
  </div>

  <div class="benefit">
    <div class="emoji">{{ block.settings.block2_emoji }}</div>
    <div class="text-container">
      <p class="primary-text">{{ block.settings.block2_primary_text }}</p>
      <p class="secondary-text">{{ block.settings.block2_secondary_text }}</p>
    </div>
  </div>
</div>

<style>
  .container {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Dos columnas */
    gap: 8px; /* Espacio entre columnas y filas */
    padding: 8px;
    justify-content: center; /* Centra el contenido en el contenedor */
    align-items: start; /* Alinea los Ã­tems al inicio para evitar desalineaciones */
  }

  .benefit {
    background-color: {{ block.settings.benefit_color }};
    border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.benefit_radius }}px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 14px 18px;
    box-sizing: border-box;
    width: 100%; /* Utiliza todo el ancho disponible de la columna */
    height: 100%;
  }

  .emoji {
    font-size: 2rem;
    margin-right: 12px;
  }

  .text-container {
    display: flex;
    flex-direction: column;
    {% comment %} align-items: flex-start; {% endcomment %}
    justify-content: center;
  }

  .primary-text, .secondary-text {
    margin: 0;
  }

  .primary-text {
    font-weight: bold;
    font-size: 14px;
    color: {{ block.settings.primary_text_color }};
  }

  .secondary-text {
    font-size: 12px;
    color: {{ block.settings.secondary_text_color }};
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr; /* Una columna en pantallas pequeÃ±as */
    }
  }
</style>

